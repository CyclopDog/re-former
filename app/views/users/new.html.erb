<% if false %>
<form action="/users" method="post" accept-charset="UTF-8">
  <label for="username">Username:</label>
  <input id="username" type="text" name="user[username]"><br>
  <label for="password">Password:</label>
  <input id="password" type="password" name="user[password]"><br>
  <label for="email">Email:</label>
  <input id="email" type="email" name="user[email]"><br>
  <input type="submit" value="Submit">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>
<% end %>

<% if false %>
<%= form_tag("/users", method: "post") do %>
  <%= label_tag(:username, "Username:") %>
  <%= text_field_tag(:username) %>
  <%= label_tag(:password, "Password:") %>
  <%= password_field_tag(:password) %>
  <%= label_tag(:email, "Email:") %>
  <%= email_field_tag(:email) %>
  <%= submit_tag("Submit") %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  Username: <%= f.text_field :username, :placeholder => 'Your Username Here' %> <br />
  Password: <%= f.password_field :password  %> <br />
  Email: <%= f.email_field :email, :placeholder => 'user@domain.com' %> <br />
  <%= f.submit "Submit" %>
<% end %>